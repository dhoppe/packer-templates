{
  "variables": {
    "iso_url": "http://cdimage.debian.org/mirror/cdimage/release/7.5.0/amd64/iso-cd/debian-7.5.0-amd64-netinst.iso",
    "iso_checksum": "8fdb6715228ea90faba58cb84644d296",
    "vm_name": "debian-7.5.0-amd64"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "auto <wait>",
        "console-keymaps-at/keymap=de <wait>",
        "console-setup/ask_detect=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "fb=false <wait>",
        "install <wait>",
        "kbd-chooser/method=de-latin1-nodeadkeys <wait>",
        "keyboard-configuration/xkb-keymap=de <wait>",
        "locale=en_US.UTF-8 <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "<enter><wait>"
      ],
      "disk_size": 10240,
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -h -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--cpus", "2"],
        ["modifyvm", "{{ .Name }}", "--memory", "1024"]
      ],
      "vm_name": "{{ user `vm_name` }}"
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "auto <wait>",
        "console-keymaps-at/keymap=de <wait>",
        "console-setup/ask_detect=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "fb=false <wait>",
        "install <wait>",
        "kbd-chooser/method=de-latin1-nodeadkeys <wait>",
        "keyboard-configuration/xkb-keymap=de <wait>",
        "locale=en_US.UTF-8 <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "<enter><wait>"
      ],
      "disk_size": 10240,
      "guest_os_type": "debian7-64",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -h -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "tools_upload_flavor": "linux",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "1024",
        "numvcpus": "2"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "scripts": [
        "scripts/motd.sh",
        "scripts/networking.sh",
        "scripts/sshd.sh",
        "scripts/sudoers.sh",
        "scripts/vagrant.sh",
        "scripts/zerodisk.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "only": ["virtualbox-iso"],
      "scripts": [
        "scripts/virtualbox.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "only": ["vmware-iso"],
      "scripts": [
        "scripts/vmfusion.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{ user `vm_name` }}-nocm_{{ .Provider }}.box"
    }
  ]
}
