{
  "variables": {
    "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.1-server-amd64.iso",
    "iso_checksum": "ca2531b8cd79ea5b778ede3a524779b9",
    "vm_name": "ubuntu-14.04.1-amd64"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz <wait>",
        "auto <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-setup/layoutcode=de <wait>",
        "console-setup/modelcode=pc105 <wait>",
        "debconf/frontend=noninteractive <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "fb=false <wait>",
        "initrd=/install/initrd.gz <wait>",
        "kbd-chooser/method=de-latin1-nodeadkeys <wait>",
        "keyboard-configuration/layout=Deutsch <wait>",
        "keyboard-configuration/variant=Deutsch - Akzenttasten deaktivieren <wait>",
        "locale=en_US.UTF-8 <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "noapic <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "-- <wait>",
        "<enter><wait>"
      ],
      "disk_size": 10240,
      "guest_os_type": "Ubuntu_64",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -h -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--cpus", "2"],
        ["modifyvm", "{{ .Name }}", "--memory", "512"]
      ],
      "vm_name": "{{ user `vm_name` }}"
    },
    {
      "type": "vmware-iso",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz <wait>",
        "auto <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-setup/layoutcode=de <wait>",
        "console-setup/modelcode=pc105 <wait>",
        "debconf/frontend=noninteractive <wait>",
        "debian-installer=en_US.UTF-8 <wait>",
        "fb=false <wait>",
        "initrd=/install/initrd.gz <wait>",
        "kbd-chooser/method=de-latin1-nodeadkeys <wait>",
        "keyboard-configuration/layout=Deutsch <wait>",
        "keyboard-configuration/variant=Deutsch - Akzenttasten deaktivieren <wait>",
        "locale=en_US.UTF-8 <wait>",
        "netcfg/get_domain=vagrantup.com <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "noapic <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "-- <wait>",
        "<enter><wait>"
      ],
      "disk_size": 10240,
      "guest_os_type": "ubuntu-64",
      "http_directory": "http",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -h -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "tools_upload_flavor": "linux",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "512",
        "numvcpus": "2"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "scripts": [
        "scripts/motd.sh",
        "scripts/networking.sh",
        "scripts/puppet.sh",
        "scripts/sshd.sh",
        "scripts/sudoers.sh",
        "scripts/update.sh",
        "scripts/vagrant.sh",
        "scripts/zerodisk.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "only": ["virtualbox-iso"],
      "scripts": [
        "scripts/virtualbox.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S bash {{ .Path }}",
      "only": ["vmware-iso"],
      "scripts": [
        "scripts/vmfusion.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{ user `vm_name` }}_{{ .Provider }}.box"
    }
  ]
}
